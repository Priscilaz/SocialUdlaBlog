@model List<BloggieWebProject.Models.Dominio.BlogPost>

@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Ver todos los BlogPost - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Encabezado</td>
                    
                    <td> </td>
                </tr>
            </thead>
            <tbody>
                @foreach (var blogPost in Model)
                {
                    <tr>
                        <td>@blogPost.Id</td>
                        <td>@blogPost.Encabezado</td>
                      
                        <td>
                            <a asp-area=""
                               asp-controller="AdminBlogPost"
                                asp-action="Editar"
                                asp-route-id="@blogPost.Id">
                                Editar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay BlogPosts disponibles.</p>
    }
</div>
